<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:card_view="http://schemas.android.com/tools"
        android:layout_width="match_parent"

        android:layout_height="wrap_content">

    <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            card_view:cardBackgroundColor="#fff">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

            <TextView
                    style="@style/Heading1"
                    android:layout_marginTop="24dp"
                    android:layout_marginHorizontal="16dp"
                    android:text="@string/select_sim"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            <TextView
                    android:id="@+id/bind_device_subheading_text_view"
                    style="@style/Caption1"
                    android:layout_marginTop="16dp"
                    android:layout_marginHorizontal="16dp"
                    android:text="@string/select_the_sim_linked_with_your_bank_account"
                    android:layout_width="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_height="wrap_content" />

            <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_margin="8dp"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="8dp"
                    app:strokeColor="#28000000"
                    app:strokeWidth="1dp">

                <LinearLayout
                        android:id="@+id/sim_selection_primary_layout"
                        android:gravity="center_vertical"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="?attr/selectableItemBackground"
                        android:padding="12dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    <com.google.android.material.card.MaterialCardView
                            android:layout_width="wrap_content"
                            android:layout_margin="8dp"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="8dp"
                            app:strokeColor="#28000000"
                            app:strokeWidth="1dp">

                        <TextView
                                style="@style/Overline1"
                                android:paddingHorizontal="18dp"
                                android:paddingVertical="13dp"
                                android:text="1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                    </com.google.android.material.card.MaterialCardView>


                    <LinearLayout
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:orientation="vertical"
                            android:layout_height="wrap_content">


                        <TextView
                                android:id="@+id/sim_selection_primary_carrier_text_view"
                                style="@style/Caption2"
                                android:text="Vodafone"
                                android:layout_marginBottom="8dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />


                        <TextView
                                android:id="@+id/sim_selection_primary_number_text_view"
                                style="@style/Overline1"
                                android:text="7011514598"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />


                    </LinearLayout>

                    <ImageView
                            android:id="@+id/sim_selection_primary_img_view"
                            android:layout_width="wrap_content"
                            android:src="@drawable/ic_tick"
                            android:layout_marginEnd="8dp"
                            android:visibility="gone"
                            android:layout_height="wrap_content" />

                </LinearLayout>


            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_margin="8dp"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="8dp"
                    app:strokeColor="#28000000"
                    app:strokeWidth="1dp">

                <LinearLayout
                        android:id="@+id/sim_selection_secondary_layout"
                        android:gravity="center_vertical"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="?attr/selectableItemBackground"
                        android:padding="12dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    <com.google.android.material.card.MaterialCardView
                            android:layout_width="wrap_content"
                            android:layout_margin="8dp"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="8dp"
                            app:strokeColor="#28000000"
                            app:strokeWidth="1dp">

                        <TextView
                                style="@style/Overline1"
                                android:paddingHorizontal="18dp"
                                android:paddingVertical="13dp"
                                android:text="2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                    </com.google.android.material.card.MaterialCardView>


                    <LinearLayout
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:orientation="vertical"
                            android:layout_height="wrap_content">


                        <TextView
                                android:id="@+id/sim_selection_secondary_carrier_text_view"
                                style="@style/Caption2"
                                android:text="Vodafone"
                                android:layout_marginBottom="8dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />


                        <TextView
                                android:id="@+id/sim_selection_secondary_number_text_view"
                                style="@style/Overline1"
                                android:text="7011514598"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />


                    </LinearLayout>

                    <ImageView
                            android:id="@+id/sim_selection_secondary_img_view"
                            android:layout_width="wrap_content"
                            android:src="@drawable/ic_tick"
                            android:layout_marginEnd="8dp"
                            android:visibility="gone"
                            android:layout_height="wrap_content" />

                </LinearLayout>


            </com.google.android.material.card.MaterialCardView>

            <View
                    android:id="@+id/divider"
                    android:layout_marginTop="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="?android:attr/listDivider" />


            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="56dp">

                <TextView
                        android:id="@+id/sim_selection_cancel_btn"
                        style="@style/Subtitle2"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="?attr/selectableItemBackground"
                        android:text="Cancel"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textColor="@color/medium_primary"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" />

                <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="?android:attr/listDivider" />

                <TextView
                        android:id="@+id/sim_selection_confirm_btn"
                        style="@style/Subtitle2"
                        android:enabled="false"
                        android:clickable="true"
                        android:textColor="@color/color_states_dialog_btn_text"
                        android:focusable="true"
                        android:background="?attr/selectableItemBackground"
                        android:layout_weight="1"
                        android:text="Confirm"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" />
            </LinearLayout>


        </LinearLayout>


    </com.google.android.material.card.MaterialCardView>
</RelativeLayout>